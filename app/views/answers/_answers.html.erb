<table>
  <tr>
    <th>Answers</th>
    <th colspan='2'>Actions</th>
  </tr>
  <% @question.answers.each do |answer| %>
    <tr>
      <td><%= answer.body %></td>
      <td><%= button_to 'Edit', edit_answer_path(answer),method: :get%></td>
      <td><%= button_to 'Delete', answer_path(answer), method: :delete,
                                data: { confirm: 'Are you sure?' }%></td>
    </tr>
  <%end %>
</table>